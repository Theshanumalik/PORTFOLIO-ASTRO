---
import { Icon } from "astro-icon/components";
import Logo from "./Logo.astro";

const navLinks = [
  { href: "/", text: "Home" },
  { href: "/blog", text: "Blog" },
  { href: "/projects", text: "Projects" },
];
---

<header class="h-[70px] flex items-center justify-between">
  <Logo />
  <nav>
    <ul class="flex gap-3">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="flex items-center text-gray-500 hover:text-gray-900 transition-colors"
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <div>
    <a
      href="mailto:theshanumalik@gmail.com"
      class="flex items-center gap-1 rounded-lg py-1 px-3 pr-4 bg-yellow-400 transition-colors hover:bg-opacity-85"
    >
      <Icon name={"mdi:email"} /> Contact
    </a>
  </div>
</header>
